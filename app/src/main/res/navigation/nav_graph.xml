<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.emirpetek.mybirthdayreminder.ui.fragment.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_birthdaysFragment"
            app:destination="@id/birthdaysFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.emirpetek.mybirthdayreminder.ui.fragment.login.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/birthdaysFragment"
        android:name="com.emirpetek.mybirthdayreminder.ui.fragment.BirthdaysFragment"
        android:label="fragment_birthdays"
        tools:layout="@layout/fragment_birthdays" >
        <action
            android:id="@+id/action_birthdaysFragment_to_birthdayAddFragment"
            app:destination="@id/birthdayAddFragment" />
        <action
            android:id="@+id/action_birthdaysFragment_to_birthdayUpdateFragment"
            app:destination="@id/birthdayUpdateFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.emirpetek.mybirthdayreminder.ui.fragment.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/socialFragment"
        android:name="com.emirpetek.mybirthdayreminder.ui.fragment.SocialFragment"
        android:label="fragment_social"
        tools:layout="@layout/fragment_social" />
    <fragment
        android:id="@+id/birthdayAddFragment"
        android:name="com.emirpetek.mybirthdayreminder.ui.fragment.BirthdayAddFragment"
        android:label="BirthdayAddFragment" />
    <fragment
        android:id="@+id/birthdayUpdateFragment"
        android:name="com.emirpetek.mybirthdayreminder.ui.fragment.BirthdayUpdateFragment"
        android:label="BirthdayUpdateFragment" />
</navigation>